<%= simple_form_for @person do |f| %>
    <%= f.association :document, label_method: :tipo_documento %>
    <%= f.input :identificacion %>
    <%= f.input :primer_nombre %>
    <%= f.input :segundo_nombre %>
    <%= f.input :primer_apellido %>
    <%= f.input :segundo_apellido %>
    <%= f.association :role, label_method: :nombre_rol %>
    <%= f.button :submit %>
  <% end %>